<footer>
    <div class="container">
        <p id="footer-secret">&copy; 2025 Centre de Gym. Tous droits réservés.</p>
    </div>
</footer>
<script>
(function() {
    let clickCount = 0;
    let timer = null;
    const secret = document.getElementById('footer-secret');
    if (secret) {
        secret.addEventListener('click', function() {
            clickCount++;
            if (clickCount === 5) {
                window.location.href = '/login';
            }
            clearTimeout(timer);
            timer = setTimeout(() => { clickCount = 0; }, 1200);
        });
    }
})();
</script>