<!DOCTYPE html>
<html lang="fr">
    <%- include('../partials/head') %>
<body>
    <div class="page-container">
        <%- include('../partials/header') %>
        
        <div class="content-wrapper">
            <!-- Barre de navigation latérale -->
            <%- include('../partials/sidebar') %>
            
            <!-- Contenu principal à droite -->
            <div class="main-content">
                <main>
                    <div class="container">
                        <section class="news-list">
                            <% actualities.forEach(actuality => { %>
                                <a href="/actuality/<%= actuality.id %>" class="news-link">
                                    <article class="news-item">
                                        <img src="<%= actuality.image %>" alt="<%= actuality.title %>" class="news-image">
                                        <div class="news-content">
                                            <h2 class="news-title"><%= actuality.title %></h2>
                                            <p class="news-description"><%= actuality.description %></p>
                                            <p class="news-date"><%= new Date(actuality.createdAt).toLocaleDateString() %></p>
                                        </div>
                                    </article>
                                </a>
                            <% }); %>
                        </section>
                    </div>
                </main>
            </div>
        </div>
        
        <%- include('../partials/footer') %>
    </div>
</body>
</html>